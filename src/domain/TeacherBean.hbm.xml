<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="domain">
  <class name="TeacherBean" table="Teacher" catalog="StudentManage">
     <id name="teacherID" type="java.lang.String">
         <column name="teacherID" length="10"></column>
     </id>
     <property name="teacherName" type="java.lang.String">
        <column name="teacherName" length="10" />
     </property>
     <property name="gender" type="java.lang.String">
        <column name="gender" length="6" />
     </property>
     <property name="age" type="java.lang.Integer">
        <column name="age" length="11" />
     </property>
     <property name="major" type="java.lang.String">
        <column name="major" length="20" />
     </property>
     <property name="password" type="java.lang.String">
        <column name="password" length="20" />
     </property>
  </class>
</hibernate-mapping>